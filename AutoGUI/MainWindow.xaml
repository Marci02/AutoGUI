<Window x:Class="AutoGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Autó gyártók" HorizontalAlignment="Left" Margin="48,13,0,0" VerticalAlignment="Top"/>
        <ListBox x:Name="GyartoList" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="14,39,538,163" SelectionChanged="GyartoList_SelectionChanged"/>
        <Label Content="Karosszéria típusa" HorizontalAlignment="Left" Margin="14,276,0,0" VerticalAlignment="Top" Width="113"/>
        <ComboBox x:Name="KarosszeriaCombo" HorizontalAlignment="Left" Margin="28,302,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Váltó típusa" HorizontalAlignment="Left" Margin="28,342,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="ValtoCombo" HorizontalAlignment="Left" Margin="28,373,0,0" VerticalAlignment="Top" Width="120"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="114" Margin="334,81,0,0" VerticalAlignment="Top" Width="91"/>
        <RadioButton x:Name="RadioTwo" Content="2" HorizontalAlignment="Left" Margin="361,100,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="RadioThree" Content="3" HorizontalAlignment="Left" Margin="361,120,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="RadioFour" Content="4" HorizontalAlignment="Left" Margin="361,143,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="RadioFive" Content="5" HorizontalAlignment="Left" Margin="361,166,0,0" VerticalAlignment="Top"/>
        <Label Content="Ajtók száma" HorizontalAlignment="Left" Margin="348,62,0,0" VerticalAlignment="Top"/>
        <Label Content="Évek száma" HorizontalAlignment="Left" Margin="348,247,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="ToText" HorizontalAlignment="Left" Margin="340,279,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="24" Height="31" FontSize="16"/>
        <TextBox x:Name="FromText" HorizontalAlignment="Left" Margin="404,279,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="24" Height="31" FontSize="16"/>
        <Label Content="-" HorizontalAlignment="Left" Margin="376,284,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.054,-0.349"/>
        <Button Content="Keresés" HorizontalAlignment="Left" Margin="310,345,0,0" VerticalAlignment="Top" Height="50" Width="140" Click="Button_Click"/>
        <ListBox x:Name="KeresesList" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="533,39,25,101"/>
        <Label Content="A keresésnek megfelelő autók" HorizontalAlignment="Left" Margin="549,13,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
